{
	"name": "captcha.gif",
	"version": "1.0.7",
	"description": "A simple captcha generator for nodejs.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"docs": "typedoc",
		"build": "tsup && tsc -b src",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{ts,mjs,json,md}'",
		"test": "jest",
		"test:watch": "jest --watch",
		"prepack": "rollup-type-bundler",
		"prepare": "husky install .github/.husky"
	},
	"keywords": [
		"captcha",
		"captcha.gif",
		"captcha generator",
		"node captcha"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-angular": "^17.0.0",
		"@favware/rollup-type-bundler": "^1.0.7",
		"@sapphire/eslint-config": "^4.3.5",
		"@sapphire/prettier-config": "^1.4.3",
		"@types/jest": "^28.1.1",
		"@types/node": "^17.0.31",
		"@types/prettier": "^2",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"conventional-changelog-cli": "^2.2.2",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^12.5.0",
		"prettier": "^2.6.2",
		"ts-jest": "^28.0.4",
		"tsup": "^6.0.1",
		"typedoc": "^0.22.17",
		"typescript": "^4.7.3"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/captcha.gif.git"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/captcha.gif/issues"
	},
	"homepage": "https://imranbarbhuiya.github.io/captcha.gif/",
	"packageManager": "yarn@3.2.1",
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"prettier": "@sapphire/prettier-config"
}

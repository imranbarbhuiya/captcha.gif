{
	"name": "captcha.gif",
	"version": "1.0.9",
	"description": "A simple captcha generator for nodejs.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"docs": "typedoc",
		"build": "tsup",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{ts,mjs,json,md}'",
		"test": "vitest run",
		"test:watch": "jest --watch",
		"prepack": "yarn build",
		"prepare": "husky install .github/.husky",
		"bump": "cliff-jumper"
	},
	"keywords": [
		"captcha",
		"captcha.gif",
		"captcha generator",
		"node captcha"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.1",
		"@commitlint/config-angular": "^17.6.1",
		"@favware/cliff-jumper": "^2.0.0",
		"@sapphire/eslint-config": "^4.4.1",
		"@sapphire/prettier-config": "^1.4.5",
		"@types/node": "^18.15.13",
		"@types/prettier": "^2.7.2",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"@vitest/coverage-c8": "^0.30.1",
		"conventional-changelog-cli": "^2.2.2",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"prettier": "^2.8.7",
		"tsup": "^6.7.0",
		"typedoc": "^0.24.5",
		"typescript": "^5.0.4",
		"vitest": "^0.30.1"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/captcha.gif.git"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/captcha.gif/issues"
	},
	"homepage": "https://imranbarbhuiya.github.io/captcha.gif/",
	"packageManager": "yarn@3.5.0",
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"prettier": "@sapphire/prettier-config"
}

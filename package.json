{
	"name": "captcha.gif",
	"version": "1.0.9",
	"description": "A simple captcha generator for nodejs.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"docs": "typedoc",
		"build": "tsup",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{ts,mjs,json,md}'",
		"test": "vitest run",
		"test:watch": "jest --watch",
		"prepack": "yarn build",
		"prepare": "husky install .github/.husky",
		"bump": "cliff-jumper"
	},
	"keywords": [
		"captcha",
		"captcha.gif",
		"captcha generator",
		"node captcha"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-angular": "^17.4.2",
		"@favware/cliff-jumper": "^1.10.0",
		"@sapphire/eslint-config": "^4.3.8",
		"@sapphire/prettier-config": "^1.4.5",
		"@types/node": "^18.11.19",
		"@types/prettier": "^2.7.2",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"@vitest/coverage-c8": "^0.28.4",
		"conventional-changelog-cli": "^2.2.2",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.3",
		"tsup": "^6.5.0",
		"typedoc": "^0.23.24",
		"typescript": "^4.9.5",
		"vitest": "^0.28.4"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/captcha.gif.git"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/captcha.gif/issues"
	},
	"homepage": "https://imranbarbhuiya.github.io/captcha.gif/",
	"packageManager": "yarn@3.4.1",
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"prettier": "@sapphire/prettier-config"
}

{
	"name": "captcha.gif",
	"version": "1.0.11",
	"description": "A simple captcha generator for nodejs.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"docs": "typedoc",
		"build": "tsup",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write '**/*.{ts,mjs,json,md}'",
		"test": "vitest run",
		"test:watch": "jest --watch",
		"prepack": "yarn build",
		"prepare": "husky install .github/.husky",
		"bump": "cliff-jumper"
	},
	"keywords": [
		"captcha",
		"captcha.gif",
		"captcha generator",
		"node captcha"
	],
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-angular": "^19.7.0",
		"@favware/cliff-jumper": "^6.0.0",
		"@sapphire/eslint-config": "^5.0.5",
		"@sapphire/prettier-config": "^2.0.0",
		"@types/node": "^22.10.5",
		"@types/prettier": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^8.19.0",
		"@typescript-eslint/parser": "^8.19.0",
		"@vitest/coverage-v8": "^2.1.8",
		"conventional-changelog-cli": "^5.0.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.3.0",
		"prettier": "^3.4.2",
		"tsup": "^8.3.5",
		"typedoc": "^0.27.6",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/captcha.gif.git"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/captcha.gif/issues"
	},
	"homepage": "https://imranbarbhuiya.github.io/captcha.gif/",
	"packageManager": "yarn@4.6.0",
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"prettier": "@sapphire/prettier-config"
}

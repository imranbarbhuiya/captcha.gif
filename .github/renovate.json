{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", "helpers:pinGitHubActionDigests", "group:allNonMajor"],
	"labels": ["Meta: Dependencies"],
	"schedule": ["before 12pm on Sunday"],
	"npm": {
		"rangeStrategy": "bump",
		"packageRules": [
			{
				"matchUpdateTypes": ["minor", "patch"],
				"matchCurrentVersion": "!/^0/",
				"automerge": true
			},
			{
				"matchPackagePatterns": ["@sapphire"],
				"groupName": "Sapphire Dependencies"
			},
			{
				"matchPackagePatterns": ["@discord"],
				"groupName": "Discord Dependencies"
			},
			{
				"matchPackagePatterns": ["@imranbarbhuiya"],
				"groupName": "Parbez Dependencies"
			},
			{
				"matchDepTypes": ["engines"],
				"enabled": false
			}
		]
	}
}
